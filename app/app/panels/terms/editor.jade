html
  body
    .editor-row
      .section
        h5 Parameters
        .editor-option
          label.small Terms mode
          select.input-medium(ng-model='panel.tmode', ng-options="f for f in ['terms','terms_stats']", ng-change='set_refresh(true)')
        .editor-option(ng-show="panel.tmode == 'terms_stats'")
          label.small Stats type
          select.input-medium(ng-model='panel.tstat', ng-options="f for f in ['count', 'total_count', 'min', 'max', 'total', 'mean']")
        .editor-option
          label.small Field
          input.input-small(type='text', bs-typeahead='fields.list', ng-model='panel.field', ng-change='set_refresh(true)')
        .editor-option(ng-show="panel.tmode == 'terms_stats'")
          label.small Value field
          input.input-small(type='text', bs-typeahead='fields.list', ng-model='panel.valuefield', ng-change='set_refresh(true)')
        .editor-option
          label.small Length
          input.input-small(type='number', ng-model='panel.size', ng-change='set_refresh(true)')
        .editor-option
          label.small Order
          select.input-medium(ng-model='panel.order', ng-options="f for f in ['count','term','reverse_count','reverse_term']", ng-change='set_refresh(true)', ng-show="panel.tmode == 'terms'")
          select.input-medium(ng-model='panel.order', ng-options="f for f in ['term', 'reverse_term', 'count', 'reverse_count', 'total', 'reverse_total', 'min', 'reverse_min', 'max', 'reverse_max', 'mean', 'reverse_mean']", ng-change='set_refresh(true)', ng-show="panel.tmode == 'terms_stats'")
        .editor-option(ng-show="panel.tmode == 'terms'")
          label.small Exclude Terms(s) (comma separated)
          input(array-join='', type='text', ng-model='panel.exclude')
    .editor-row
      .section
        h5 View Options
        .editor-option
          label.small Style
          select.input-small(ng-model='panel.chart', ng-options="f for f in ['bar','pie','table']")
        .editor-option(ng-show="panel.chart == 'table'")
          label.small Font Size
          select.input-mini(ng-model="panel.style['font-size']", ng-options="f for f in ['7pt','8pt','9pt','10pt','12pt','14pt','16pt','18pt','20pt','24pt','28pt','32pt','36pt','42pt','48pt','52pt','60pt','72pt']")
        .editor-option(ng-show="panel.chart == 'bar' || panel.chart == 'pie'")
          label.small Legend
          select.input-small(ng-model='panel.counter_pos', ng-options="f for f in ['above','below','none']")
        .editor-option(ng-show="panel.chart != 'table' && panel.counter_pos != 'none'")
          label.small Legend Format
          select.input-small(ng-model='panel.arrangement', ng-options="f for f in ['horizontal','vertical']")
        .editor-option
          label.small Missing
          input(type='checkbox', ng-model='panel.missing', ng-checked='panel.missing')
        .editor-option
          label.small Other
          input(type='checkbox', ng-model='panel.other', ng-checked='panel.other')
        .editor-option(ng-show="panel.chart == 'pie'")
          label.small Donut
          input(type='checkbox', ng-model='panel.donut', ng-checked='panel.donut')
        .editor-option(ng-show="panel.chart == 'pie'")
          label.small Tilt
          input(type='checkbox', ng-model='panel.tilt', ng-checked='panel.tilt')
        .editor-option(ng-show="panel.chart == 'pie'")
          label.small Labels
          input(type='checkbox', ng-model='panel.labels', ng-checked='panel.labels')
