html
  body
    div(ng-controller='stats', ng-init='init()')
      style.
        table.stats-table th, table.stats-table td {
        text-align: right;
        }
        table.stats-table th:first-child,  table.stats-table td:first-child {
        text-align: left !important;
        }
      h1(ng-style='panel.style', style='text-align: center; line-height: .6em')
        | {{data.value|formatstats:panel.format}} 
        small(style='font-size: .5em; line-height: 0;') {{panel.unit}} ({{panel.mode}})
      table.table-hover.table.table-condensed.stats-table(ng-show="panel.display_breakdown == 'yes'", cellspacing='0', style='margin-top: 38px;')
        tbody
          thead
            tr
              th
                a(href='', ng-click="set_sort('label')", ng-class="{'icon-chevron-down': panel.sort_field == 'label' && panel.sort_reverse == true, 'icon-chevron-up': panel.sort_field == 'label' && panel.sort_reverse == false}")  {{panel.label_name}} 
              th(ng-repeat='stat in modes', ng-show='panel.show[stat]')
                a(href='', ng-click='set_sort(stat)', ng-class="{'icon-chevron-down': panel.sort_field == stat && panel.sort_reverse == true, 'icon-chevron-up': panel.sort_field == stat && panel.sort_reverse == false}")
                  | {{stat}}
          tr(ng-repeat="item in data.rows | orderBy:(panel.sort_field == 'label' ? 'label' : 'value.'+panel.sort_field):panel.sort_reverse")
            td
              i.icon-circle(ng-style='{color:item.color}')
              |  {{item.label}}
            td(ng-repeat='stat in modes', ng-show='panel.show[stat]') {{item.value[stat]|formatstats:panel.format}} {{panel.unit}}
            // <td style="text-align: right;">{{item.value|formatstats:panel.format}} {{panel.unit}}</td>
