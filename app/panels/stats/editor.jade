html
  body
    .row-fluid
      h5 Details
      .editor-option
        label.small Featured Stat
        select.input-small(ng-change='set_refresh(true)', ng-model='panel.mode', ng-options='f for f in modes')
      .editor-option
        label.small
          | Field 
          tip This field must contain a numeric value
        input.input-large(ng-change='set_refresh(true)', placeholder='Start typing', bs-typeahead='fields.list', type='text', ng-model='panel.field')
      .editor-option
        label.small Unit
        input.input-large(type='text', ng-model='panel.unit')
      h5 Columns
      .editor-option(ng-repeat='stat in modes')
        label.small {{stat}}
        input(type='checkbox', ng-model='panel.show[stat]', ng-checked='panel.show[stat]')
      h5 Formating
      .editor-option
        label.small Format
        select.input-small(ng-change='set_refresh(true)', ng-model='panel.format', ng-options="f for f in ['number','float','money','bytes']")
      .editor-option
        label.small Font Size
        select.input-mini(ng-model="panel.style['font-size']", ng-options="f for f in ['7pt','8pt','9pt','10pt','12pt','14pt','16pt','18pt','20pt','24pt','28pt','32pt','36pt','42pt','48pt','52pt','60pt','72pt']")
      .editor-option
        label.small Display Breakdowns
        select.input-mini(ng-model='panel.display_breakdown', ng-options="f for f in ['yes', 'no']")
      .editor-option
        label.small Query column name
        input.input-large(type='text', ng-model='panel.label_name')
