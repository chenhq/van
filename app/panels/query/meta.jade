html
  body
    .panel-query-meta.row-fluid(style='width:260px')
      style.
        .panel-query-meta fieldset label {
        margin-top: 3px;
        }
      fieldset
        select.input-small(ng-model='dashboard.current.services.query.list[id].type', ng-change='typeChange(dashboard.current.services.query.list[id])')
          option(ng-repeat='type in queryTypes') {{type}}
        |  &amp;nbsp
        a.small(href='', ng-click='queryHelp(dashboard.current.services.query.list[id].type)')  About the {{dashboard.current.services.query.list[id].type}} query
        hr.small
        label.small Legend value
        input(type='text', ng-model='dashboard.current.services.query.list[id].alias', placeholder='Alias...')
      div(ng-include='', src='queryConfig(dashboard.current.services.query.list[id].type)')
      hr.small
      div
        i.pointer(ng-repeat='color in querySrv.colors', ng-class="{'icon-circle-blank':dashboard.current.services.query.list[id].color == color,'icon-circle':dashboard.current.services.query.list[id].color != color}", ng-style='{color:color}', ng-click='dashboard.current.services.query.list[id].color = color;render();')  
      .pull-right
        a.btn.btn-mini(ng-click='dashboard.current.services.query.list[id].enable=false;dashboard.refresh();dismiss();') Deactivate
        a.btn.btn-mini(ng-class='{active:dashboard.current.services.query.list[id].pin}', ng-click='toggle_pin(id);dismiss();')
          | Pin 
          i.icon-pushpin
        input.btn.btn-mini(ng-click='dashboard.refresh();dismiss();', type='submit', value='Close')
