html
  body
    .page-signup
      .signin-header
        .container.text-center
          section.logo
            a(href='#/') {{main.brand}}
      .signup-body
        .container
          .form-container
            section.row.signin-social.text-center
              a.btn-icon.btn-icon-sm.bg-twitter(href='javascript:;')
                i.fa.fa-twitter
              .space
              a.btn-icon.btn-icon-sm.bg-facebook(href='javascript:;')
                i.fa.fa-facebook
              .space
              a.btn-icon.btn-icon-sm.bg-google-plus(href='javascript:;')
                i.fa.fa-google-plus
            span.line-thru OR
            section
              form.form-horizontal
                .form-group
                  .input-group.input-group-lg
                    span.input-group-addon
                      span.glyphicon.glyphicon-user
                    input.form-control(type='text', placeholder='User name')
                .form-group
                  .input-group.input-group-lg
                    span.input-group-addon
                      span.glyphicon.glyphicon-envelope
                    input.form-control(type='email', placeholder='Email')
                .form-group
                  .input-group.input-group-lg
                    span.input-group-addon
                      span.glyphicon.glyphicon-lock
                    input.form-control(type='password', placeholder='Password')
                .form-group
                  p.text-muted.text-small
                    | By clicking on Sign up, you agree to 
                    a(href='javascript:;') terms &amp; conditions
                    |  and 
                    a(href='javascript:;') privacy policy
                  .divider
                  a.btn.btn-primary.btn-block.btn-lg(href='#/') Sign up
            section
              p.text-center.text-muted
                | Already have an account? 
                a(href='#/pages/signin') Log in now
