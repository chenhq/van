html
  body
    .modal-body
      style.
        .timepicker-to-column {
        margin-top: 10px;
        }
        .timepicker-input input {
        outline: 0 !important;
        border: 0px !important;
        -webkit-box-shadow: 0;
        -moz-box-shadow: 0;
        box-shadow: 0;
        position: relative;
        }
        .timepicker-input input::-webkit-outer-spin-button,
        .timepicker-input input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
        }
        input.timepicker-date {
        width: 90px;
        }
        input.timepicker-hms {
        width: 20px;
        }
        input.timepicker-ms {
        width: 25px;
        }
        div.timepicker-now {
        float: right;
        }
      .timepicker.form-horizontal
        form(name='input')
          .timepicker-from-column
            label.small From
            .fake-input.timepicker-input
              input.timepicker-date(type='text', ng-change='validate(temptime)', ng-model='temptime.from.date', data-date-format='yyyy-mm-dd', required='', bs-datepicker='')
              | @
              input.timepicker-hms(type='text', maxlength='2', ng-change='validate(temptime)', ng-model='temptime.from.hour', required='', ng-pattern='patterns.hour', onclick='this.select();')
              | :
              input.timepicker-hms(type='text', maxlength='2', ng-change='validate(temptime)', ng-model='temptime.from.minute', required='', ng-pattern='patterns.minute', onclick='this.select();')
              | :
              input.timepicker-hms(type='text', maxlength='2', ng-change='validate(temptime)', ng-model='temptime.from.second', required='', ng-pattern='patterns.second', onclick='this.select();')
              | .
              input.timepicker-ms(type='text', maxlength='3', ng-change='validate(temptime)', ng-model='temptime.from.millisecond', required='', ng-pattern='patterns.millisecond', onclick='this.select();')
          .timepicker-to-column
            label.small
              | To (
              a.link(ng-class="{'strong':panel.now}", ng-click='setNow();panel.now=true') now
              | )
            .fake-input.timepicker-input
              div(ng-hide='panel.now')
                input.timepicker-date(type='text', ng-change='validate(temptime)', ng-model='temptime.to.date', data-date-format='yyyy-mm-dd', required='', bs-datepicker='')
                | @
                input.timepicker-hms(type='text', maxlength='2', ng-change='validate(temptime)', ng-model='temptime.to.hour', required='', ng-pattern='patterns.hour', onclick='this.select();')
                | :
                input.timepicker-hms(type='text', maxlength='2', ng-change='validate(temptime)', ng-model='temptime.to.minute', required='', ng-pattern='patterns.minute', onclick='this.select();')
                | :
                input.timepicker-hms(type='text', maxlength='2', ng-change='validate(temptime)', ng-model='temptime.to.second', required='', ng-pattern='patterns.second', onclick='this.select();')
                | .
                input.timepicker-ms(type='text', maxlength='3', ng-change='validate(temptime)', ng-model='temptime.to.millisecond', required='', ng-pattern='patterns.millisecond', onclick='this.select();')
              span(type='text', ng-show='panel.now', ng-disabled='panel.now')
                | &amp;nbsp 
                i.pointer.icon-remove-sign(ng-click='setNow();panel.now=false')
                |  Right Now 
                input(type='text', name='dummy', style='visibility:hidden')
        .clearfix
    .modal-footer
      form(name='input', style='margin-bottom:0')
        span(ng-hide='input.$valid') Invalid date or range
        button.btn.btn-success(ng-click='setAbsoluteTimeFilter(validate(temptime));dismiss();', ng-disabled='!input.$valid') Apply
        button.btn.btn-danger(ng-click='dismiss();') Cancel
