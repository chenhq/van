html
  body
    .editor-row
      .section
        h5 Values
        .editor-option
          label.small Chart value
          select.input-small(ng-change='set_refresh(true)', ng-model='panel.mode', ng-options="f for f in ['count','min','mean','max','total']")
        .editor-option(ng-show="panel.mode != 'count'")
          label.small
            | Value Field 
            tip This field must contain a numeric value
          input.input-medium(ng-change='set_refresh(true)', placeholder='Start typing', bs-typeahead='fields.list', type='text', ng-model='panel.value_field')
      .section
        h5 Transform Series
        .editor-option(ng-show="panel.mode != 'count'")
          label.small Scale
          input.input-mini(type='text', ng-model='panel.scale')
        .editor-option
          label.small
            | Seconds 
            tip Normalize intervals to per-second
          input(type='checkbox', ng-model='panel.scaleSeconds', ng-checked='panel.scaleSeconds')
        .editor-option
          label.small
            | Derivative 
            tip Plot the change per interval in the series
          input(type='checkbox', ng-model='panel.derivative', ng-checked='panel.derivative', ng-change='set_refresh(true)')
        .editor-option
          label.small
            | Zero fill 
            tip Fills zeros in gaps.
          input(type='checkbox', ng-model='panel.zerofill', ng-checked='panel.zerofill', ng-change='set_refresh(true)')
      .section
        h5 Time Options
        .editor-option
          label.small Time Field
          input.input-small(ng-change='set_refresh(true)', placeholder='Start typing', bs-typeahead='fields.list', type='text', ng-model='panel.time_field')
        .editor-option
          label.small Time correction
          select.input-small(ng-model='panel.timezone', ng-options="f for f in ['browser','utc']")
        .editor-option
          label.small Auto-interval
          input(type='checkbox', ng-model='panel.auto_int', ng-checked='panel.auto_int')
        .editor-option(ng-show='panel.auto_int')
          label.small
            | Resolution 
            tip Shoot for this many data points, rounding to sane intervals
          input.input-mini(type='number', ng-model='panel.resolution', ng-change='set_refresh(true)')
        .editor-option(ng-hide='panel.auto_int')
          label.small
            | Interval 
            tip Use Elasticsearch date math format (eg 1m, 5m, 1d, 2w, 1y)
          input.input-mini(type='text', ng-model='panel.interval', ng-change='set_refresh(true)')
